<div class="container-fluid dungeon show">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/series#{{dungeon.world.series._id}}">{{dungeon.world.series.dena.formal_name}}</a></li>
    <li class="breadcrumb-item"><a href="/worlds/{{dungeon.world._id}}">{{dungeon.world.dena.name}}</a></li>
    <li class="breadcrumb-item active">{{dungeon.dena.name}}</li>
  </ol>

  <h3>{{dungeon.dena.name}}</h3>

  {{#if dungeon.audioUrl}}
  <audio style="width: 100%;" controls="controls" preload="none"> 
    <source src="{{dungeon.audioUrl}}" type="audio/mp4"> 
  </audio>
  {{/if}}

  <h5>Battles</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each dungeon.battles}}
        <tr>
          <td><a href="/battles/{{_id}}">{{name}}</a></td>
        </tr>
      {{/each}}    
    </tbody>
  </table>

  <h5>Enemies</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each dungeon.enemies}}
        <tr>
          <td><a href="/enemies/{{_id}}">{{dena.name}}</a></td>
        </tr>
      {{/each}}    
    </tbody>
  </table>

  <h5>Prizes</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Qty</th>
        <th>For</th>
      </tr>
    </thead>
    <tbody>
      {{#each dungeon.prizes}}
        <tr>
          <td><img src="https://ffrk.static.denagames.com/{{item.dena.image_path}}" class="image-fluid" /></td>
          <td>{{item.dena.name}}</td>
          <td>{{num}}</td>
          <td>{{category}}</td>
        </tr>
      {{/each}}    
    </tbody>
  </table>
</div>