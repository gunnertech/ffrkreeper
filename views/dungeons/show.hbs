<div class="container-fluid world show">


  <h3>{{dungeon.dena.name}}</h3>

  {{#if dungeon.audioUrl}}
  <audio style="width: 100%;" controls="controls" preload="none"> 
    <source src="{{dungeon.audioUrl}}" type="audio/mp4"> 
  </audio>
  {{/if}}

  <h5>Battles</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each dungeon.battles}}
        <tr>
          <td><a href="/battles/{{_id}}">{{dena.name}}</a></td>
        </tr>
      {{/each}}    
    </tbody>
  </table>
</div>