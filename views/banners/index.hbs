<div class="container-fluid events index">
  <!-- Nav tabs -->
  <ul class="nav nav-pills nav-fill" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#gacha" role="tab">Gacha</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#events" role="tab">Events</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="gacha" role="tabpanel">
      <div class="row">
      {{#each gachas}}
        <div class="col-lg-4 col-md-6">
          <img class="img-fluid" src="https://ffrk.static.denagames.com/dff/static/lang/ww/compile/en/image/gacha_series/lineup_image/{{this}}.png" onerror="this.onerror=null;$(this).parent().remove();" />
        </div>
      {{/each}}
      </div>
    </div>
    <div class="tab-pane" id="events" role="tabpanel">
      <div class="row">
      {{#each events}}
        <div class="col-lg-4 col-md-6">
          <img class="img-fluid" src="https://ffrk.static.denagames.com/dff/static/lang/ww/compile/en/image/event/{{this}}.png" onerror="this.onerror=null;$(this).parent().remove();" />
        </div>
      {{/each}}
      </div>
    </div>
  </div>

</div>