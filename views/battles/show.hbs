<div class="container-fluid battles index">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/series#{{battle.dungeon.world.series._id}}">{{battle.dungeon.world.series.dena.formal_name}}</a></li>
    <li class="breadcrumb-item"><a href="/worlds/{{battle.dungeon.world._id}}">{{battle.dungeon.world.dena.name}}</a></li>
    <li class="breadcrumb-item"><a href="/dungeons/{{battle.dungeon._id}}">{{battle.dungeon.dena.name}}</a></li>
    <li class="breadcrumb-item active">{{battle.name}}</li>
  </ol>

  <h5>Drop Rates</h5>

  <div class="card">
    <div class="card-block">
      <ul class="list-unstyled">
        {{#each battle.dropRateModels}}

        <li class="media">
          <img class="d-flex mr-3" src="{{item.imgUrl}}">
          <div class="media-body">
            <h5 class="mt-0 mb-1">{{item.dena.name}}</h5>
            <ul class="list-unstyled">
              <li>Dropped in {{hits}} out of {{runCount}} runs ({{successPct}}%)</li>
              <li>Avg/Run: {{roundedPerRun}}</li>
              {{#if roundedPerStamina}}
                <li>Avg/Stam: {{roundedPerStamina}}</li>
              {{/if}}
            </ul>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <h5>Enemies</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each battle.enemies}}
        <tr>
          <td><a href="/enemies/{{_id}}">{{dena.name}}</a></td>
        </tr>
      {{/each}}    
    </tbody>
  </table>
</div>